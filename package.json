{
  "name": "diary-app",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun run prisma:generate && bun run build:app",
    "build:app": "bun build src/index.ts --outdir dist --target node",
    "prisma:generate": "prisma generate",
    "postinstall": "prisma generate",
    "prisma:db:push": "prisma db push",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "hono": "^4.9.5",
    "winston": "^3.17.0",
    "zod": "^4.1.5",
    "prisma": "^6.15.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
